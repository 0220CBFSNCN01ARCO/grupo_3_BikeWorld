{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Iniciar servidor",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "-r", "esm"
      ],
      "program": "${workspaceFolder}/site/bin/www",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "DEBUG": "grupo-3-bikeworld:*"
      }
    }
  ]
}
