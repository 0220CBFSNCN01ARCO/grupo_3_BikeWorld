<div class="container-fluid mt-3 mb-3">

  <div class="col-12">
    <h2 class="products-title"><%= sectionTitle %></h2>
    <hr class="line-title">
  </div>

  <div class="row">
    <% if (products.length > 0) { %>
      <% products.forEach(product => { %>
        <div class="col-6 col-lg-2">
          <section class="product-box">
            <a href="/products/<%= product.id %>">

              <figure class="product-box_image">
                <img src="<%= getProductImagePath(product.image) %>" alt="Imagen de producto">
              </figure>

              <article class="product-box_data">
                <h2>
                  $ <%= toThousand(Math.round(product.price - (product.price * product.discount / 100))) %>
                </h2>
                <% if (product.discount) { %>
                  <span class="badge badge-primary ml-2"><%= product.discount %>% OFF</span>
                <% } %>

                <p><%= product.name %></p>

                <i class="fas fa-truck"></i>
              </article>

            </a>
          </section>
        </div>
      <% }) %>
    <% } else { %>
      <h5>No se encontraron art√≠culos con los criterios seleccionados</h5>
    <% } %>
  </div>

</div>
