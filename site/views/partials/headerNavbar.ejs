<header class="container-fluid">
  <div class="row">
    <div class="col-12 d-flex justify-content-end border-bottom border-primary">
      <% if (!logged) { %>
        <a class="mr-3 text-dark" href="/users/login">Iniciar sesión | Crear cuenta</a>
      <% } else { %>
        <a class="mr-3 text-dark" href="/users/profile">Mi cuenta</a>
      <% } %>
    </div>
  </div>
  <div class="row align-items-center mb-3 mb-md-0">
    <div class="col-12 col-md-4">
      <a href="/">
        <img src="/images/logoNuevo.svg" alt="logo">
      </a>
    </div>
    <div class="d-none d-md-block col-md-5"></div>
    <div class="col">
      <form action="/products" method="get" class="search-form">
        <input type="search" class="search-form__input" name="q" placeholder="Buscar productos, marcas y más">
        <button class="search-form__button" type="submit"><i class="fas fa-search"></i></button>
      </form>
    </div>
    <% if (logged) { %>
      <div clas="col-auto">
        <a href="/cart"><i class="fas fa-shopping-cart icon-cart"></i></a>
      </div>
    <% } %>
  </div>
</header>

<nav class="navbar navbar-expand-md navbar-dark bg-primary">
  <a href="/" class="navbar-brand">
    <i class="fas fa-home"></i>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item active">
        <a href="/products" class="nav-link">Todos los productos</a>
      </li>
      <li class="nav-item active">
        <a href="/products?selectedCategory=4" class="nav-link">Bicicletas</a>
      </li>
      <li class="nav-item active">
        <a href="/products?selectedCategory=5" class="nav-link">Ruedas</a>
      </li>
      <li class="nav-item active">
        <a href="/products?selectedCategory=2" class="nav-link">Transmisión</a>
      </li>
      <li class="nav-item active">
        <a href="/products?selectedCategory=3" class="nav-link">Frenos</a>
      </li>
      <li class="nav-item active">
        <a href="/products?selectedCategory=1" class="nav-link">Accesorios</a>
      </li>
    </ul>
  </div>
</nav>
