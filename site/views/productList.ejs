<!-- Products selector filter-->
<div class="col-sm-3 col-md-2 col-lg" id="selectorFilter">
  <form action="/products" method="GET">
  <select name="selectedCategory" id="productList">
    <option disabled="disabled" selected="selected">Elija una categor√≠a</option>
    <% categories.forEach(category => { %>
      <option value="<%= category.id %>"><%= category.name %></option>
      <% }) %>
    </select>
    <button type="submit" class="btn btn-primary">Filtrar</button>
    <button type="submit" class="btn btn-primary" id=''>Quitar filtros</button>

  </form>
  </div>

  <div class="row">

      <!-- Products (Section) -->
      <div class="card-body">
        <%- include('partials/home/section', { sectionTitle: 'Listado Productos', products: products }) %>
      </div>
    </div>
  </div>
</div>
