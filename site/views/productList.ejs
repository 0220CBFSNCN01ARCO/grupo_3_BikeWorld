<!-- Head -->
<%- include('partials/head', { title: 'Listado de productos' }) %>

<!-- Header -->
<%- include('partials/headerNavbar') %>

<div class="container">

  <div class="row">

    <div class="col d-flex mt-3">

      <form action="/products" method="get">

        <select name="selectedCategory">
          <option disabled="disabled" selected="selected">Elija una categor√≠a</option>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% }) %>
        </select>

        <button type="submit" class="btn btn-primary ml-2">Filtrar</button>

      </form>

      <a href="/products" class="btn btn-outline-danger ml-2">Quitar filtros</a>

    </div>

    <div class="col-auto d-flex justify-content-end align-items-center">
      <% if (admin) { %>
        <a href="/products/create" class="btn btn-outline-secondary">Agregar producto</a>
      <% } %>
    </div>

  </div>

  <%- include('partials/home/section', { sectionTitle: 'Listado de productos', products }) %>

</div>

<!-- Footer -->
<%- include('partials/footer') %>
