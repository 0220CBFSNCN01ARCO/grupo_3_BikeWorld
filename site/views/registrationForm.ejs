<!-- Head -->
<%- include('partials/head', { title: 'Registro' }) %>

<!-- Header -->
<%- include('partials/headerNavbar') %>

<div class="row mt-5 mb-5">
  <!-- Registración -->
  <div class="col-sm-12 col-md-6">
    <div class="mb-3">
      <h2 class="Titulo-pagina">No tienes cuenta ? / Completá tus datos</h2>
    </div>
    <form method="post" action="/user/register">
      <div class="container">
        <!-- Name -->
        <div class="row mb-3">
          <label for="nombre">Nombre</label>
          <input type="text" name="nombre" class="form-control" placeholder="Ingrese su nombre" id="nombre" aria-describedby="emailHelp"
            required>
        </div>
        <!-- Last name -->
        <div class="row mb-3">
          <label for="apellido">Apellido</label>
          <input type="text" name="apellido" class="form-control" placeholder="Ingrese su apellido" id="apellido"
            aria-describedby="emailHelp" required>
        </div>
        <!-- Email -->
        <div class="row mb-3">
          <label for="email">E-mail</label>
          <input type="email" name="email" class="form-control" placeholder="Ingrese su email" id="email" aria-describedby="emailHelp"
            required>
        </div>
        <!-- Password -->
        <div class="row mb-3">
          <label for="password">Contraseña</label>
          <input type="password" name="password" class="form-control"
            placeholder="La contraseña debe tener 6 caracteres como mínimo." id="password" required>
        </div>
        <!-- Repeat password -->
        <div class="row mb-3">
          <label for="repetirPassword">Repetir contraseña</label>
          <input type="password" name="passwordRepeat" class="form-control" placeholder="" id="repetirPassword"
            required>
        </div>
        <!-- Add image -->
        <div class="row mb-3">
          <label for="imagen">Añadir imagen</label>
          <input type="file" name="avatar" class="form-control" placeholder="Foto Perfil" id="imagen" required>
        </div>
        <!-- Create account -->
        <div class="row mb-5 justify-content-end">
          <button type="submit" class="btn btn-primary">Crear Cuenta</button>
        </div>
      </div>
    </form>
  </div>
  <!-- /Registracion -->
  <!-- Login -->
  <div class="col-sm-12 col-md-6">
    <div class="mb-3">
      <h2 class="Titulo-pagina">Ya tienes cuenta !!! / Logueate</h2>
    </div>
    <form method="post" action="/user/login">
      <div class="container">
        <div class="row mb-3">
          <label for="Email">Apellido</label>
          <input type="text" name="email-login" class="form-control" placeholder="ingrese su email" id="email-login"
            aria-describedby="emailHelp" required>
        </div>
        <div class="row mb-3">
          <label for="password">Contraseña</label>
          <input type="password" name="password" class="form-control" placeholder="Ingrese su contraseña" id="password"
            required>
        </div>
        <div class="row mb-5 justify-content-end">
          <button type="submit" class="btn btn-primary">Loguearse</button>
        </div>
      </div>
    </form>
  </div>
  <!-- /Login -->
</div>

<!-- Footer -->
<%- include('partials/footer') %>
