<!-- Head -->
<%- include('partials/head', { title: 'Carrito' }) %>

<!-- Header -->
<%- include('partials/headerNavbar') %>

<div class="container mb-5">
  <h2 class="mt-3">Tu compra</h2>

  <hr>

  <!-- Cart articles -->
  <% items.forEach(saleDetail => {%>
    <div class="row">
      <div class="col-12 col-md-3">
        <img src="<%= getProductImagePath(saleDetail.product.image) %>">
      </div>

      <div class="col-12 col-md-4">
        <h3><%= saleDetail.product.name %></h3>
        <h5><%= saleDetail.product.description %></h5>
      </div>

      <div class="col-12 col-md-2 d-flex flex-row flex-md-column justify-content-between justify-content-md-start mt-4 mt-md-0">
        <h5>Precio unitario</h5>
        <div>
          <h3>$ <%= saleDetail.product.price %></h3>
          <% if (saleDetail.product.discount > 0) { %>
            <div class="h3">
              <span class="badge badge-primary"><%= saleDetail.product.discount %>% OFF</span>
            </div>
          <% } %>
        </div>
      </div>

      <div class="col-12 col-md-1 d-flex flex-row flex-md-column justify-content-between justify-content-md-start mt-4 mt-md-0">
        <h5>Cantidad</h5>
        <h3><%= saleDetail.amount %></h3>
      </div>

      <div class="col-12 col-md-2 d-flex justify-content-end mt-4 mt-md-0">
        <form action="/cart?_method=DELETE" method="post">
          <button class="btn btn-danger" name="itemId" type="submit" value="<%= saleDetail.id %>">Eliminar</button>
        </form>
      </div>
    </div>

    <hr>

  <% }) %>

  <div class="row justify-content-md-end">
    <div class="col-12 col-md-4 d-flex justify-content-between">
      <h5>Productos</h5>
      <h5><%= amountProducts %></h3>
    </div>
  </div>

  <div class="row justify-content-md-end">
    <div class="col-12 col-md-4 d-flex justify-content-between">
      <h3>Total</h3>
      <h3>$ <%= totalPrice %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12 d-flex justify-content-end">
      <form action="/cart/buy" method="post">
        <button class="btn btn-primary" type="submit">Comprar</button>
      </form>
    </div>
  </div>
</div>

<!-- Footer -->
<%- include('partials/footer') %>
