<!DOCTYPE html>
<html lang="en">

<!-- Incluir el head -->
<%- include('partials/head', { title: 'Editar producto' }) %>

<body class="home-body">

  <!-- Incluir el header -->
  <%- include('partials/headerNavbar') %>

  <div class="container mt-5 mb-5">

    <div class="row">
      <div class="col-12 mb-3">
        <h2>Editar producto</h2>
      </div>
    </div>

    <form action="/products/:id?_method=PUT" method="POST" enctype="multipart/form-data">

      <div class="row">
        <div class="col-12 col-md-6 pt-3 pt-md-0">

          <% function makeEntries(label, name, value, type = 'text') { %>
            <div class="form-group">
              <label for="entrada<%- name %>"><%- label %></label>
              <input type="<%- type %>"
                     class="form-control"
                     id="entrada<%- name%>"
                     name="<%- name.toLowerCase() %>"
                     value="<%= value %>">
            </div>
          <% } %>

          <% makeEntries('Nombre', 'name', product.name) %>
          <% makeEntries('Precio', 'price', product.price, 'number') %>
          <% makeEntries('Descuento', 'discount', product.discount, 'number') %>
          <% makeEntries('Categoría', 'category', product.category) %>
          <% makeEntries('Descripción', 'description', product.description) %>
          <% makeEntries('Estado', 'status', product.status) %>

        </div>
        <div class="col-12 col-md-6 order-first order-md-last">
          <label for="inputImage">Imagen</label><br>
          <input type="file" id="inputImage" name="image">
        </div>
      </div>

      <div class="row">
        <div class="col-12 col-md-6 mb-3">
          <button class="btn btn-primary form-control" type="submit">Guardar cambios</button>
        </div>
      </div>

    </form>
  </div>

  <!-- Incluir el footer -->
  <%- include('partials/footer') %>

  <!-- Incluir los scripts de bootstrap -->
  <%- include('partials/bootstrapScripts') %>
</body>

</html>
