<!DOCTYPE html>
<html lang="es">
 <!-- Head -->
 <%- include('partials/head', { title: 'Product Detail' }) %>
 <!-- Final del head -->
<body>
  <!-- Header -->
  <%- include('partials/headerNavbar') %>
  <!-- Final del header -->
  <div class="container">
    <div class="row">
    </div>
    <br>
    <div class="detalleContainer">
      <div class="col-12 d-flex justify-content-center detalleTitulo ">
        <h1><%- name %></h1>
      </div>
      <div class="row col-12 m-0 p-0">
        <div class="detalleProducto d-flex flex-wrap p-1 m-1">
          <div class="col-12 col-md-4">
            <div class="col-12 col-md-12 p-0 detalleImagenPrincipal">
              <a href="">
                <figure>
                  <img src="<%- image %>" alt="imagen de producto">
                </figure>
              </a>
            </div>
            <div class="col-12 col-md-12 d-flex p-0 justify-content-center p-0">
              <div class="col-md-4 p-1">
                <a href="">
                  <figure class="detalleImagen">
                    <img src='<%- image %>' alt="imagen de producto">
                  </figure>
                </a>
              </div>
              <div class="col-md-4 p-1">
                <a href="">
                  <figure class="detalleImagen">
                    <img src='<%- image %>' alt="imagen de producto">
                  </figure>
                </a>
              </div>
              <div class="col-md-4 p-1">
                <a href="">
                  <figure class="detalleImagen">
                    <img src='<%- image %>' alt="imagen de producto">
                  </figure>
                </a>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-8">
            <article class="infoProducto">
              <h2><strong>$<%- price %></strong></h2>
              <div class="col-12 p-2 m-0 justify-content-center detalleDescripcion">
                <p><%- description %>
                </p>
              </div>

              <div class="col-12 d-flex justify-content-center">
                <button type="button" class="detalleProductoComprar p-3">
                  <p class="m-0">AGREGAR AL CARRITO</p>
                </button>
              </div>
            </article>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>
    <!-- /Footer -->

    <!-- Scripts Bootstrap -->
    <%- include('partials/bootstrapScripts') %>
    <!-- /Scripts Bootstrap -->
  </div>
</body>
</html>
